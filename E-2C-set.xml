		<model>
			<path>Aircraft/E-2C/Models/E-2C-model.xml</path>
			<E-2C>
				<controls>
					<rotodome>
						<rotation-rpm>5</rotation-rpm>
					</rotodome>
				</controls>
				<instrumentation>
					<radar-altimeter>
						<limit-bug type="double">250</limit-bug>
					</radar-altimeter>
				</instrumentation>
			</E-2C>

		</model>


		<help>
