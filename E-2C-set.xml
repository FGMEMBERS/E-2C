				<!--<heading-offset-deg>268.5</heading-offset-deg>-->
				<!--<default-field-of-view-deg>10</default-field-of-view-deg>-->
			</config>
		</view>
		<view n="2">
				<!--<target-y-offset-m archive="y" type="double">-1.500</target-y-offset-m>-->
				<!--<target-x-offset-m archive="y" type="double">3.340</target-x-offset-m>-->
				<!--<target-z-offset-m archive="y" type="double">-0.600</target-z-offset-m>-->
				<!--<pitch-offset-deg>-0.6</pitch-offset-deg>-->
				<!--<heading-offset-deg>-268.5</heading-offset-deg>-->
				<default-field-of-view-deg>10</default-field-of-view-deg>-->
		</view>
		<view n="3">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="5">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="6">
			<config>
				<target-z-offset-m archive="y" type="double">8.0</target-z-offset-m>
			</config>
		</view>
		<view n="100">
			<name>Navigator View</name>
			<type>lookfrom</type>
			<internal type="bool">true</internal>
			<config>
				<from-model type="bool">true</from-model>
				<x-offset-m>0.36</x-offset-m>
				<y-offset-m>-0.18</y-offset-m>
				<z-offset-m>-6.9</z-offset-m>
				<pitch-offset-deg>-5.35</pitch-offset-deg>
				<default-field-of-view-deg>55</default-field-of-view-deg>
